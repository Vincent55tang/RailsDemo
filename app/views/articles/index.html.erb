<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
        <td><%= link_to article.title, article_path(article) %></td>
      <td><%= article.text %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New article', new_article_path %>
